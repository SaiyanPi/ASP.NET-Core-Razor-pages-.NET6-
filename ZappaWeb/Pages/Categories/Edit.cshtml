@page
@model ZappaWeb.Pages.Categories.EditModel

<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            @* Name:
            <input type="text" name="categoryName" /> *@
            <label asp-for="Category.Name"></label> @* or, 'asp-for="@Model.Category.Name"'' *@
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger "></span>
        </div>
        <div class="mb-3">
            @* Display Order:
            <input type="text" name="displayOrder" /> *@
            <label asp-for="Category.DisplayOrder"></label>  @* or,  asp-for="@Model.Category.DisplayOrder" *@
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:100px;">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:100px;">Back</a> @* redirect to index of same folder *@
        @* <a asp-page="../Index" class="btn btn-secondary" style="width:100px;">Back</a> *@ @* redirect to index outside the folder *@
    </div>
</form>
@section Scripts{ @* for client side validation *@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}