@page
@model ZappaWeb.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        
        <div class="mb-3">
            @* Name:
            <input type="text" name="categoryName" /> *@
            <label asp-for="Category.Name"></label> @* or, 'asp-for="@Model.Category.Name"'' *@
            <input asp-for="Category.Name" class="form-control" readonly/>
          
        <div class="mb-3">
            @* Display Order:
            <input type="text" name="displayOrder" /> *@
            <label asp-for="Category.DisplayOrder"></label>  @* or,  asp-for="@Model.Category.DisplayOrder" *@
            <input asp-for="Category.DisplayOrder" class="form-control" readonly/>
           
        </div>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are You sure you want to delete?')" style="width:100px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:100px;">Back</a> @* redirect to index of same folder *@
        @* <a asp-page="../Index" class="btn btn-secondary" style="width:100px;">Back</a> *@ @* redirect to index outside the folder *@
    </div>
</form>
